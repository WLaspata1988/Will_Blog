<!-- Hero section -->
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })
    <section class="page-top-section set-bg" data-setbg="/img/page-top-bg.jpg">
        <div class="container">
            <h2>Contact</h2>
        </div>
    </section>
    <!-- Hero section end -->

    <section class="contact-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="contact-form-warp">
                        <h4>Leave a message</h4>
                        <form class="contact-form">
                            <div class="row">
                                <div class="col-md-6 form-group">
                                    @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
                                    @Html.TextBoxFor(m => m.FromName, new { @class = "form-control", placeholder = "First and Last name" })
                                    @Html.ValidationMessageFor(m => m.FromName)
                                </div>
                                <div class="col-md-6 form-group">
                                    @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
                                    @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", placeholder = "example@email.com" })
                                    @Html.ValidationMessageFor(m => m.FromEmail)
                                </div>
                                <div class="col-md-6 form-group">
                                    @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "Subject" })
                                    @Html.ValidationMessageFor(m => m.Subject)
                                </div>
                                <div class="form-group col-lg-12">
                                    <h2>Message</h2>
                                    @Html.TextAreaFor(m => m.Body, new { @class = "form-control", id="body" })
                                    @Html.ValidationMessageFor(m => m.Body)
                                </div>
                                <div class="form-group col-md-6">
                                    <input type="submit" class="btn btn-primary" value="Send" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="contact-logo">
                        <img src="~/img/logo.png" alt="">
                    </div>
                    <div class="contact-info">
                        <ul class="ct-list">
                            <li>
                                <h6>Address:</h6>
                                <p>481 Creekside Lane Avila</p>
                                <p>Beach, CA 93424</p>
                            </li>
                            <li>
                                <h6>Phone:</h6>
                                <p>+53 345 7953 32453</p>
                                <p>+53 345 7557 822112</p>
                            </li>
                            <li>
                                <h6>Email:</h6>
                                <p>yourmail@gmail.com</p>
                            </li>
                        </ul>
                        <div class="contact-social">
                            <a href="#"><i class="fa fa-pinterest"></i></a>
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-dribbble"></i></a>
                            <a href="#"><i class="fa fa-behance"></i></a>
                            <a href="#"><i class="fa fa-linkedin"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- map -->
            <div class="location-map" id="map-canvas"></div>
        </div>
    </section>
}
